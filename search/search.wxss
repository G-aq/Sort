/* subpkg/search/search.wxss */
.search-item {
  background-color: rgb(245, 245, 245);
  display: flex;
   border-radius: 40rpx;
   width: 700rpx;
   margin: 0 auto;
}
.search-box {
  display: inline-block;
  background-color: rgb(245, 245, 245);
  height: 100rpx;
  line-height: 50rpx;
  border-radius: 40rpx;
  font-weight: 200;
}
.search-history {
  margin: 20rpx 0rpx 20rpx 20rpx;
  font-size: small;
}
.del {
  float: right;
  padding-right: 25rpx;
}
.hot-items {
  margin-top: 25rpx;
  background-color: rgb(245, 245, 245);
  display: inline-block;
  width: 80rpx;
  height: 60rpx;
  line-height: 60rpx;
}
.hot-search {
  margin: 50rpx 0rpx 0rpx 25rpx;
  
}
.hot-title {
  display: inline-block;
  margin-left: 10rpx;
  margin-bottom: 20rpx;
}
.hot-search-item {
 margin-left: 15rpx;
}
.hot-search-item .items{
  display: inline-block;
  margin-left: 15rpx;
}